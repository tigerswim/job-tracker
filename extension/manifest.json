{
  "manifest_version": 3,
  "name": "Job Tracker - Quick Import",
  "version": "1.0.0",
  "description": "One-click import of job postings from LinkedIn, Indeed, and company career pages into Job Tracker",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://*.breezy.hr/*",
    "https://*.smartrecruiters.com/*",
    "https://job-tracker.kineticbrandpartners.com/*",
    "http://localhost:3001/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/viewjob*",
        "https://*.greenhouse.io/jobs/*",
        "https://*.lever.co/jobs/*",
        "https://*.workday.com/*/job/*",
        "https://*.breezy.hr/*",
        "https://*.smartrecruiters.com/*/jobs/*"
      ],
      "js": [
        "content/parsers/linkedin.js",
        "content/parsers/indeed.js",
        "content/parsers/generic.js",
        "content/ui.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "commands": {
    "add-job": {
      "suggested_key": {
        "default": "Alt+J"
      },
      "description": "Add current job to Job Tracker"
    }
  }
}
